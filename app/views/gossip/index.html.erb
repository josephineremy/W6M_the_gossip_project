<br><div class="text-center"><h1>Bienvenue sur le site Gossip 3.0</h1></div>
<div class="d-flex">
  <div class="row justify-content-center">
    <% if @gossips %>
    <% @gossips.each do |gossip| %>
    <div class="col-md-3 col-sm-10 col-xs-12 card m-4">
      <div class="card">
        <!-- Card image -->
        <img class="card-img-top" src="https://images.pexels.com/photos/568025/pexels-photo-568025.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="Card image cap">
      <!-- Card content -->
      <div class="card-body">
        <!-- Title -->
        <h4 class="card-title"><%= truncate(gossip.title, length:50) %></h4>
        <!-- Text -->
        <p class="card-text"><%= truncate(gossip.content, length:100) %></p>
        <div class="text-right text-danger"> <small><%=gossip.user.first_name%></small></div>
        <!-- Button -->
        <%= link_to "Vas voir le potin", gossip_path(gossip.id) %>

      </div>
    </div>
    </div>
  <% end %>
<% else %>
  <p>Il n'y a pas de potin</p>
<% end %>
